function PlotUhProj(uh_coeff,GQ_x,k,GQ1DRef_pts)
    % plot
    [NGQ,num_ele] = size(GQ_x);
    V1D = Vandermonde1D(k,GQ1DRef_pts);
    xpts = reshape(GQ_x,[],1);
    xpts = xpts';
    
    uh_pro_GQpts = zeros(NGQ, NGQ, num_ele, numeric_t);
    
    y_cut = 10;
    fpts = zeros(1, num_ele*NGQ, numeric_t);
    
    for ii = 1:num_ele
        uh_pro_GQpts(:,:,ii) = V1D * uh_coeff(:,:,ii) * (V1D');
        fpts(1,(ii-1)*NGQ+1:ii*NGQ) = uh_pro_GQpts(y_cut,:,ii);

    end
    
    N_col = sqrt(num_ele);
    N_level = 3;
    stard_id = (N_level-1)*N_col*NGQ + 1;
    end_id = N_level*N_col*NGQ;
    
    
    figure
    plot(xpts(stard_id:end_id),fpts(stard_id:end_id),'*--')
    hold on
    yline(0,'r-');
    for j = 1:N_col-1
        xline(hx*j,'r--');
    end
    
    text = "ERROR (y cut and GQ #" + num2str(y_cut) +" and level "+num2str(N_level) + ")";
    title(text)
    legend('u- uh at GQ')
    
    
end